{
  "rules": {
    "users": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "$userId === auth.uid"
      }
    },
    "companies": {
      "$companyId": {
        ".read": "auth != null && (root.child('users').child(auth.uid).child('companyId').val() == $companyId || root.child('users').child(auth.uid).child('role').val() == 'admin')",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('companyId').val() == $companyId || root.child('users').child(auth.uid).child('role').val() == 'admin')"
      }
    },
    "materials": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() == 'admin'"
    }
  }
}
