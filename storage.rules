
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // 📄 CERTIFICADOS - Administradores pueden subir. Clientes solo leen.
    match /certificates/{companyId}/{fileName} {
      allow read: if request.auth != null;
      // ✅ CORRECCIÓN: Se usa la sintaxis de Realtime Database (root.child) en lugar de la de Firestore (get).
      allow write: if request.auth != null && root.child('users').child(request.auth.uid).child('role').val() == 'admin';
    }
    
    // 🖼️ IMÁGENES DE COMPAÑÍA - Administradores pueden subir.
    match /company-covers/{companyId}/{fileName} {
       allow read: if true; // Publicly readable for embeds
       // ✅ CORRECCIÓN: Se usa la sintaxis de Realtime Database.
       allow write: if request.auth != null && root.child('users').child(request.auth.uid).child('role').val() == 'admin';
    }
  }
}
