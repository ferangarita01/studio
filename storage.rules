rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Perfil de la empresa: Solo el administrador puede escribir.
    match /company-covers/{companyId}/{fileName} {
      allow read: if true; // Las imágenes de portada son públicas
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Certificados: Los usuarios autenticados pueden escribir en su propia carpeta
    // Los administradores pueden escribir en cualquier carpeta de certificados
    match /certificates/{userId}/{fileName} {
      allow read, write: if request.auth != null 
        && (request.auth.uid == userId || get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin')
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('application/pdf');
    }
  }
}
