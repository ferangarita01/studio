rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // üìÑ CERTIFICADOS - Administradores pueden subir. Clientes solo leen.
    match /certificates/{companyId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // üñºÔ∏è IM√ÅGENES DE COMPA√ë√çA - Administradores pueden subir.
    match /company-covers/{companyId}/{fileName} {
       allow read: if true; // Publicly readable for embeds
       allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ‚ùå TODO LO DEM√ÅS = DENEGADO POR SEGURIDAD
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
