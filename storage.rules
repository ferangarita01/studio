rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // üìÑ CERTIFICADOS - Administradores pueden subir. Clientes solo leen.
    match /certificates/{companyId}/{fileName} {
      allow read: if request.auth != null;
      // CORRECT SYNTAX FOR REALTIME DATABASE
      allow write: if request.auth != null && root.child('users').child(request.auth.uid).child('role').val() == 'admin';
    }
    
    // üñºÔ∏è IM√ÅGENES DE COMPA√ë√çA - Administradores pueden subir.
    match /company-covers/{companyId}/{fileName} {
       allow read: if true; // Publicly readable for embeds
       // CORRECT SYNTAX FOR REALTIME DATABASE
       allow write: if request.auth != null && root.child('users').child(request.auth.uid).child('role').val() == 'admin';
    }
    
    // ‚ùå TODO LO DEM√ÅS = DENEGADO POR SEGURIDAD
    // This rule is commented out as it's redundant. Firebase Storage denies by default.
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }
  }
}
