
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to all files by default
    match /{allPaths=**} {
      allow read;
    }

    // Allow write access only for authenticated users
    // You can add more specific rules for different folders if needed
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Example of more specific rules for a 'certificates' folder:
    // Only allow authenticated users to upload files less than 5MB
    match /certificates/{companyId}/{fileName} {
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }

    // Example for user profile images:
    // Only allow a user to write to their own folder
    match /user-profiles/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
